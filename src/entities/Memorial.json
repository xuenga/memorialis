{
  "name": "Memorial",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nom de la personne commémorée"
    },
    "birth_date": {
      "type": "string",
      "format": "date"
    },
    "death_date": {
      "type": "string",
      "format": "date"
    },
    "biography": {
      "type": "string",
      "description": "Biographie ou texte commémoratif"
    },
    "profile_photo": {
      "type": "string",
      "description": "URL de la photo principale"
    },
    "cover_photo": {
      "type": "string",
      "description": "URL de la photo de couverture"
    },
    "photos": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs des photos"
    },
    "videos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          }
        }
      }
    },
    "audios": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "description": "Fichiers audio (messages vocaux, musique)"
    },
    "allow_comments": {
      "type": "boolean",
      "default": true
    },
    "require_moderation": {
      "type": "boolean",
      "default": true
    },
    "access_code": {
      "type": "string",
      "description": "Code unique du QR gravé sur la plaque"
    },
    "slug": {
      "type": "string",
      "description": "URL personnalisée du mémorial"
    },
    "is_public": {
      "type": "boolean",
      "default": true
    },
    "is_activated": {
      "type": "boolean",
      "default": false,
      "description": "True si le client a scanné son QR pour la première fois"
    },
    "owner_email": {
      "type": "string",
      "description": "Email du propriétaire du mémorial"
    },
    "created_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "name"
  ]
}