{
  "name": "Memorial",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nom de la personne commémorée"
    },
    "birth_date": {
      "type": "string",
      "format": "date"
    },
    "death_date": {
      "type": "string",
      "format": "date"
    },
    "biography": {
      "type": "string",
      "description": "Biographie ou texte commémoratif"
    },
    "profile_photo": {
      "type": "string",
      "description": "URL de la photo principale"
    },
    "cover_photo": {
      "type": "string",
      "description": "URL de la photo de couverture"
    },
    "photos": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs des photos"
    },
    "videos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          }
        }
      }
    },
    "allow_comments": {
      "type": "boolean",
      "default": true
    },
    "require_moderation": {
      "type": "boolean",
      "default": true
    },
    "qr_code_url": {
      "type": "string"
    },
    "access_code": {
      "type": "string",
      "description": "Code unique du QR gravé sur la plaque"
    },
    "is_public": {
      "type": "boolean",
      "default": false
    },
    "is_activated": {
      "type": "boolean",
      "default": false,
      "description": "True si le client a scanné son QR pour la première fois"
    },
    "owner_email": {
      "type": "string",
      "description": "Email du propriétaire du mémorial"
    },
    "theme": {
      "type": "string",
      "enum": [
        "classic",
        "modern",
        "nature",
        "elegant",
        "custom"
      ],
      "default": "classic"
    },
    "custom_colors": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "string"
        },
        "accent": {
          "type": "string"
        },
        "bg": {
          "type": "string"
        }
      }
    },
    "created_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "name"
  ]
}